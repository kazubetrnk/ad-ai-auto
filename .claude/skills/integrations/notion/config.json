{
  "name": "notion",
  "description": "Notion workspace - pages, databases, content management",
  "type": "npm",
  "command": "npx",
  "args": ["-y", "@notionhq/notion-mcp-server"],
  "env": {
    "OPENAPI_MCP_HEADERS": "{\"Authorization\": \"Bearer ${NOTION_API_KEY}\", \"Notion-Version\": \"2022-06-28\"}"
  },
  "setup": {
    "requirements": [
      "Notion workspace",
      "Integration token from notion.so/my-integrations"
    ]
  },
  "capabilities": {
    "tools": 15,
    "categories": ["pages", "databases", "blocks", "search", "users"]
  },
  "source": {
    "npm": "https://www.npmjs.com/package/@notionhq/notion-mcp-server",
    "github": "https://github.com/makenotion/notion-mcp-server",
    "docs": "https://developers.notion.com/docs/get-started-with-mcp"
  }
}
